<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="AppFontFamily">Noto Sans KR, Segoe UI</FontFamily>

    <Color x:Key="BackgroundDarkTop">#14181D</Color>
    <Color x:Key="BackgroundDarkBottom">#0F1216</Color>
    <Color x:Key="PanelDark">#1C2127</Color>
    <Color x:Key="PanelDarker">#171B20</Color>
    <Color x:Key="PanelBorder">#2B323A</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B8C0C8</Color>
    <Color x:Key="TextMuted">#7E8A96</Color>
    <Color x:Key="AccentTeal">#25D0C8</Color>
    <Color x:Key="AccentGreen">#32C46C</Color>
    <Color x:Key="AccentGreenDark">#2E7D32</Color>
    <Color x:Key="AccentRed">#E53935</Color>

    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BackgroundDarkTop}" Offset="0" />
        <GradientStop Color="{StaticResource BackgroundDarkBottom}" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelDark}" />
    <SolidColorBrush x:Key="PanelDarkerBrush" Color="{StaticResource PanelDarker}" />
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorder}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />
    <SolidColorBrush x:Key="AccentTealBrush" Color="{StaticResource AccentTeal}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="AccentGreenDarkBrush" Color="{StaticResource AccentGreenDark}" />
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}" />

    <CornerRadius x:Key="PanelCornerRadius">8</CornerRadius>

    <DropShadowEffect x:Key="SoftShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.25" />
</ResourceDictionary>
