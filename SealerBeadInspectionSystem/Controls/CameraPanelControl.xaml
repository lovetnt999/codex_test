<UserControl x:Class="SealerBeadInspectionSystem.Controls.CameraPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SealerBeadInspectionSystem.Controls">
    <Grid RowDefinitions="Auto,* ,Auto">
        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,6,0,8" />

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Border BorderBrush="{Binding FrameBrush, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                    BorderThickness="4"
                    CornerRadius="6"
                    Background="{StaticResource PanelDarkerBrush}"
                    Width="1600"
                    Height="900">
                <Grid>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2B2B2B" Offset="0" />
                                <GradientStop Color="#4C3A2B" Offset="0.55" />
                                <GradientStop Color="#1A1A1A" Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Canvas>
                        <Rectangle Width="{Binding RoiWidth, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                                   Height="{Binding RoiHeight, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                                   Stroke="White"
                                   StrokeThickness="1.5"
                                   Visibility="{Binding ShowRoi, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Canvas.Left="{Binding RoiLeft, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                                   Canvas.Top="{Binding RoiTop, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}" />
                    </Canvas>
                </Grid>
            </Border>
        </Viewbox>

        <TextBlock Grid.Row="2"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   Margin="0,8,0,4">
            <Run Text="{Binding CaptionPrefix, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}" />
            <Run Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                 Foreground="{Binding ValueBrush, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}" />
            <Run Text="{Binding ScorePrefix, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}" />
            <Run Text="{Binding ScoreText, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}"
                 Foreground="{Binding ValueBrush, RelativeSource={RelativeSource AncestorType=local:CameraPanelControl}}" />
        </TextBlock>
    </Grid>
</UserControl>
